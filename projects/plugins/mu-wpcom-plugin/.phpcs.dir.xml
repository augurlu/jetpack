<?xml version="1.0"?>
<ruleset>

	<!-- Ideally we'd just configure PHPCompatibility with the right PHP version, but it uses <config> rather than <properties>. Sigh. -->
	<!-- So instead we have to manually disable certain sniffs. -->
	<rule ref="./.phpcs.dir.phpcompatibility.xml" />

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="jetpack-mu-wpcom-plugin" />
			</property>
		</properties>
	</rule>
	<rule ref="Jetpack.Functions.I18n">
		<properties>
			<property name="text_domain" value="jetpack-mu-wpcom-plugin" />
		</properties>
	</rule>

	<rule ref="WordPress.Utils.I18nTextDomainFixer">
		<properties>
			<property name="old_text_domain" type="array" />
			<property name="new_text_domain" value="jetpack-mu-wpcom-plugin" />
		</properties>
	</rule>

</ruleset>
