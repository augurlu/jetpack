<?xml version="1.0"?>
<ruleset>
	<rule ref="Jetpack-NoWP" />
	<rule ref="Jetpack-Compat-80" />

	<!-- https://github.com/PHPCompatibility/PHPCompatibility/issues/1696 -->
	<rule ref="PHPCompatibility.Syntax.NewFlexibleHeredocNowdoc">
		<exclude name="PHPCompatibility.Syntax.NewFlexibleHeredocNowdoc.ClosingMarkerNoNewLine" />
	</rule>

	<rule ref="Squiz.Commenting.FunctionComment">
		<properties>
			<property name="skipIfInheritdoc" value="true" />
		</properties>
	</rule>
</ruleset>
